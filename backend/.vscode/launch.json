    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://localhost:3333",
            "webRoot": "${workspaceFolder}/src/index.js",
        },
        
        {
            "name": "Launch via npm",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/src/index.js",
            "runtimeExecutable": "npm",
            "runtimeArgs": ["nodemon", "debug"],
            "port": 9229
        }
    ]
}